<form class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="links/add" method="POST">
                        <div class="form-group">
                            <input class='form-control' type="text" name='title' placeholder="Title" autofocus>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="url" name='url' placeholder="URL">
                        </div>
                        <div class="form-group">
                            <textarea class='form-control' name="description" id="" cols="30" rows="2"
                                placeholder="Description"></textarea>
                        </div>
                        <div class="form-group">
                            <button class='btn btn-success btn-block' type="submit">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>